/* pages/login/login.wxss */
@import '../../styles/common.wxss';
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.logo {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-text {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffd700;
  display: block;
}

.tabs {
  display: flex;
  margin-bottom: 60rpx;
  background-color: #2a2a4e;
  border-radius: 12rpx;
  padding: 8rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  color: #8a8a8a;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tab.active {
  background-color: #ffd700;
  color: #1a1a2e;
  font-weight: bold;
}

.form {
  width: 100%;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  background-color: #2a2a4e;
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.input:focus {
  border-color: #ffd700;
}




