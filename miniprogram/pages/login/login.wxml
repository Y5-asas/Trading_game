<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-container">
    <view class="logo">
      <text class="logo-text">💰</text>
      <text class="title">黄金交易游戏</text>
    </view>

    <view class="tabs">
      <view class="tab {{isLogin ? 'active' : ''}}" bindtap="switchMode">登录</view>
      <view class="tab {{!isLogin ? 'active' : ''}}" bindtap="switchMode">注册</view>
    </view>

    <view class="form">
      <view class="input-group">
        <text class="label">用户名</text>
        <input 
          class="input" 
          type="text" 
          placeholder="请输入用户名"
          value="{{username}}"
          bindinput="inputUsername"
        />
      </view>

      <view class="input-group">
        <text class="label">密码</text>
        <input 
          class="input" 
          type="password" 
          placeholder="请输入密码"
          value="{{password}}"
          bindinput="inputPassword"
        />
      </view>

      <button 
        class="btn btn-primary mt-40" 
        bindtap="{{isLogin ? 'handleLogin' : 'handleRegister'}}"
      >
        {{isLogin ? '登录' : '注册'}}
      </button>
    </view>
  </view>
</view>




