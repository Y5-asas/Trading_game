/* pages/trading/trading.wxss */
@import '../../styles/common.wxss';
.price-card {
  text-align: center;
  padding: 40rpx;
}

.price-label {
  font-size: 28rpx;
  color: #8a8a8a;
  display: block;
  margin-bottom: 20rpx;
}

.price-value {
  font-size: 64rpx;
  font-weight: bold;
  display: block;
}

.account-info {
  margin-top: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #2a2a4e;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #8a8a8a;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.chart-container {
  margin-top: 20rpx;
  padding: 30rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffd700;
  display: block;
  margin-bottom: 20rpx;
}

.chart {
  width: 100%;
  height: 400rpx;
}

.actions {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.actions .btn {
  flex: 1;
}




