<!--pages/trading/trading.wxml-->
<view class="container">
  <view class="price-card card">
    <text class="price-label">当前价格</text>
    <text class="price-value text-primary">${{currentPriceFormatted}}</text>
  </view>

  <view class="account-info card">
    <view class="info-row">
      <text class="info-label">账户余额</text>
      <text class="info-value">¥{{balanceFormatted}}</text>
    </view>
    <view class="info-row">
      <text class="info-label">持仓价值</text>
      <text class="info-value">{{totalValueFormatted}}</text>
    </view>
    <view class="info-row">
      <text class="info-label">未实现盈亏</text>
      <text class="info-value {{unrealizedPnl >= 0 ? 'text-success' : 'text-danger'}}">
        {{unrealizedPnl >= 0 ? '+' : ''}}{{unrealizedPnlFormatted}}
      </text>
    </view>
  </view>

  <view class="chart-container card">
    <text class="chart-title">价格走势</text>
    <canvas canvas-id="priceChart" class="chart"></canvas>
  </view>

  <view class="actions">
    <button class="btn btn-success" bindtap="handleBuy">买入</button>
    <button class="btn btn-danger" bindtap="handleSell">卖出</button>
    <button class="btn btn-secondary" bindtap="handleHold">持仓</button>
  </view>
</view>




