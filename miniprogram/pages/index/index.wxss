/* pages/index/index.wxss */
@import '../../styles/common.wxss';
.header {
  text-align: center;
  padding: 40rpx 0;
}

.greeting {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffd700;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #8a8a8a;
  display: block;
}

.stats-card {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-top: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
}

.actions {
  margin-top: 40rpx;
}

.tips {
  margin-top: 40rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffd700;
  display: block;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #cccccc;
  line-height: 1.8;
  white-space: pre-line;
}




