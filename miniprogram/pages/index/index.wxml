<!--pages/index/index.wxml-->
<view class="container">
  <view class="header">
    <text class="greeting">你好，{{userInfo ? userInfo.username : '用户'}}</text>
    <text class="subtitle">开始你的交易之旅</text>
  </view>

  <view class="stats-card card">
    <view class="stat-item">
      <text class="stat-label">账户余额</text>
      <text class="stat-value text-primary">¥{{balanceFormatted}}</text>
    </view>
    <view class="stat-item">
      <text class="stat-label">总收益率</text>
      <text class="stat-value {{totalReturn >= 0 ? 'text-success' : 'text-danger'}}">
        {{totalReturn >= 0 ? '+' : ''}}{{totalReturnFormatted}}%
      </text>
    </view>
    <view class="stat-item">
      <text class="stat-label">交易次数</text>
      <text class="stat-value">{{totalTrades}}</text>
    </view>
    <view class="stat-item">
      <text class="stat-label">胜率</text>
      <text class="stat-value">{{winRateFormatted}}%</text>
    </view>
  </view>

  <view class="actions">
    <button class="btn btn-primary" bindtap="startNewGame">
      🎮 开始新游戏
    </button>
    <button class="btn btn-secondary mt-20" bindtap="continueGame" wx:if="{{currentSession}}">
      ▶️ 继续游戏
    </button>
  </view>

  <view class="tips card">
    <text class="tips-title">💡 游戏提示</text>
    <text class="tips-content">
      • 初始资金：¥10,000\n
      • 交易品种：XAUUSD（黄金）\n
      • 观察市场趋势，做出明智的交易决策\n
      • 控制风险，合理使用杠杆
    </text>
  </view>
</view>




