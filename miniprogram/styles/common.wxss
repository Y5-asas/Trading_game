/**公共样式文件**/
page {
  background-color: #16213e;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #1a1a2e;
}

.btn-secondary {
  background-color: #2a2a4e;
  color: #ffffff;
  border: 2rpx solid #ffd700;
}

.btn-danger {
  background-color: #e74c3c;
  color: #ffffff;
}

.btn-success {
  background-color: #27ae60;
  color: #ffffff;
}

/* 卡片样式 */
.card {
  background-color: #1a1a2e;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 24rpx;
  background-color: #2a2a4e;
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 28rpx;
  border: 2rpx solid transparent;
}

.input:focus {
  border-color: #ffd700;
}

/* 文本样式 */
.text-primary {
  color: #ffd700;
}

.text-success {
  color: #27ae60;
}

.text-danger {
  color: #e74c3c;
}

.text-secondary {
  color: #8a8a8a;
}

.text-center {
  text-align: center;
}

/* 间距 */
.mt-20 {
  margin-top: 20rpx;
}

.mt-40 {
  margin-top: 40rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-40 {
  margin-bottom: 40rpx;
}

.p-20 {
  padding: 20rpx;
}

.p-40 {
  padding: 40rpx;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

